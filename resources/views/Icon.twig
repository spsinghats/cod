
<form id="checkout_payment"> 
<select name="paymentMethod">
{% for item in methods %}
    <option value="item">{{item}}</option>
 {% endfor %}
</select>
<div>{{price}}</div>
<div id="button_wrapper"></div>
<input type="hidden" name="token_hidden_input" id="token_hidden_input">
<input type="hidden" name="session_hidden_input" id="session_hidden_input">
</form>

<script>
    console.log("on ready ceevo");
    const ceevo = new CeevoPayment({ el: "div#button_wrapper", "envMode":"DEV", APIkey: "{{apiKey}}", price: "30", currency: "INR", form: "form#checkout_payment", tokenInput: "input#token_hidden_input", sessionInput: "input#session_hidden_input" });
    $('#checkout_payment').ready(function() {
        ceevo.render();
    });


</script>